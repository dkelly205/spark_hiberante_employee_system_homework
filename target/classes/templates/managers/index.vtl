    <a href="/managers/new" class="button center">New Manager</a>
</div>

<div class="container">
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Salary</th>
            <th>Budget(Â£)</th>
            <th>Department</th>
        </tr>


        #foreach($manager in $managers)
